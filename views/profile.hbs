  <h1>Profile</h1>
  <div id='photo-container'>
    <img id="profile-photo" src='/img/avatar-male.jpg'>
    <i class="fa fa-camera upload-button"></i>
    <input type="button" id="update-avatar" value="Update Avatar">

    <!--Modal -->
    <div id='modal'>
      <div id="modal-content">
        <span id="close-button">&times;</span> <br>

        <img src="/img/avatar-male.jpg" id="image-preview" alt="image preview..">

        <div id="modal-buttons">
        <input  type="file" accept="image/jpeg image/x-png" id="choose-image-upload">


        <input type='button' id="image-upload" value="Save Photo as Avatar">
        <input type='button' id='image-delete' value='Remove Photo'>
      </div>
      </div>
    </div>

  </div>

  <h2>My Task</h2>

  <form >
    <label>Description</label><input id="desc-input" name='description' autocomplete="off" required>
    <label>Completed</label><input id="comp-input" name='completed' autocomplete="off" type="text">
    <input type="submit" value="Create">

  </form>
  <div>
  <input id='id' type="text" placeholder="ID">
  <button id='delete'>Delete</button>
  <button id='update'>Update</button>
  <button id='logout'>Log out</button>
</div>
  <div id='tasks'>
    <ul id='ul'>
      <!-- <span id='checkedbox'><i class="far fa-check-square"></i></span> -->
    </ul>
  </div>
  <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
  <script src ="/js/profile.js"></script>
</body>
</html>
